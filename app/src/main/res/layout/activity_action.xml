<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qianfeng.actionapplication.ActionActivity">

    <!-- sp ： 字体大小跟系统设置的一样，随系统的字体大小改变而改变-->
    <Button
        android:layout_width="wrap_content"
        android:text="音乐播放"
        android:textSize="32sp"
        android:onClick="onClick"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="打电话"
        android:textSize="32sp"
        android:onClick="call"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="发短信"
        android:textSize="32sp"
        android:onClick="sendMsgTo"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="发邮件"
        android:textSize="32sp"
        android:onClick="mailTo"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="wrap_content"
        android:textSize="32sp"
        android:text="寻找本机的音乐文件"
        android:onClick="searchMusic"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="打开网页"
        android:textSize="32sp"
        android:onClick="openWeb"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="使用地图"
        android:textSize="32sp"
        android:onClick="geo"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="播放指定的音乐文件"
        android:textSize="32sp"
        android:onClick="listener"
        android:layout_height="wrap_content" />

</LinearLayout>
